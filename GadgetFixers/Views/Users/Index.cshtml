        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GadgetType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GadgetId)
            </td>
